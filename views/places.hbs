
<!--<link rel="stylesheet" href="stylesheets/place.css">-->
<div class="container">
    <div class="title">
        <h1>Search Your Place Here</h1>
    </div>
</div>
    <div  class="container-lg-cn">
        <div style="display: none">
            <div id="user_id">{{user.id}}</div>
            <div id="name">{{user.first_name}} {{user.last_name}}</div>
        </div>
        {{#each places}}
        <div id="{{this.id}}" class="col-7 detailBox">
            <div class="col-12 container" >
                <div class="col-12 placeDetails">
                    <div>
                        <label class="col-2 label-md">Address:</label>
                        <div class="col-10 para-md">{{this.address.no}},{{this.address.street}},{{this.address.city}}</div>
                    </div>
                    <div>
                        <label class="col-2 label-md">Capacity:</label>
                        <div class="col-10 para-md">{{this.capacity}}</div>
                    </div>
                    <div>
                        <label class="col-2 label-md">Price:</label>
                        <div class="col-10 para-md">{{this.price}}</div>
                    </div>
                    <div>
                        <label class="col-2 label-md">More Details:</label>
                        <div class="col-10 para-md">{{this.description}}</div>
                    </div>
                    <div>
                        <label class="col-2 label-md">Owner Details:</label>
                        <div class="col-10 para-md"><a href="javascript:void(0)" onclick="showUserDetails('{{this.postedBy}}',this)">Click here to see details </a> </div>
                    </div>

                </div>

                <hr>

                <span>Comments about the place</span>
                <div class="comments">
                   {{#each this.review}}
                       <div id="{{this.id}}" class="col-1-of col-10 comment">
                           <label class="col-12 label-md">{{this.postedBy.first_name}} {{this.postedBy.last_name}}</label>
                           <div class="col-1-of para-sm">{{this.text}}</div>
                           <a class="delete" href="javascript:void(0)" onclick="removeComment(this)">&#10005;</a>
                       </div>

                   {{/each}}
                    <input class="comment-ln" type="text" name="review" placeholder="Enter your comment">
                    <div class="col-1-of">
                        <button class="submit-bt" onclick="createCommentbutton(this)">Submit</button>
                        <button class="submit-bt" style="background: #dc0000;">Delete</button>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>

<script type="text/javascript" src="/javascripts/comment.js">
</script>